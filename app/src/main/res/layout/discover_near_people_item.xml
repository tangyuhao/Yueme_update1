<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <ImageView
        android:id="@+id/avatar_view"
        style="@style/My.ImageView.Photo_Avatar"
        android:src="@drawable/default_user_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <RelativeLayout
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/_34"
        android:layout_weight="0.17">

        <TextView
            android:id="@+id/name_text"
            style="@style/My.TextView._Black"
            android:textSize="15sp"
            android:text="" />
        <TextView
            android:id="@+id/login_text"
            style="@style/My.TextView._Black"
            android:textSize="15sp"
            android:text="时间：2015年1月31日晚上"
            android:layout_below="@+id/distance_text"
            android:layout_alignParentLeft="true"
            android:singleLine="true" />
        <TextView
            android:id="@+id/location_text"
            style="@style/My.TextView._Black"
            android:textSize="15sp"
            android:text="地点：复旦附近"
            android:layout_below="@+id/login_text"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:singleLine="true" />
        <TextView
            android:id="@+id/publish_time_text"
            style="@style/My.TextView._Black"
            android:textSize="15sp"
            android:text="发布于"
            android:layout_below="@+id/location_text"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:singleLine="true" />
        <TextView
            android:id="@+id/distance_text"
            style="@style/My.TextView._Gray"
            android:text=" "
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_gravity="left"
            android:layout_toRightOf="@+id/login_text"
            android:layout_below="@+id/yue_text"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/yue_text"
            style="@style/My.TextView._Gray"
            android:layout_below="@id/name_text"
            android:text="据说，羊年是属于白羊座的领头年，白羊座的人要钱财有钱财，要桃花有桃花，要走运立马走运，要啥得啥，红红火火，年头一直旺到年底！！不信你转发试试！！！"
            android:singleLine="false"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp" />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_layout"
            android:layout_below="@+id/publish_time_text"
            android:layout_gravity="right|left">
            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="@dimen/chatBottomBtnSize"
                android:layout_height="@dimen/chatBottomBtnSize"
                android:enabled="true"
                android:text="删"
                android:textSize="10dp"
                android:background="@drawable/common_btn"
                android:layout_below="@+id/publish_time_text"
                android:layout_toRightOf="@+id/location_text"
                android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/talkBtn"
                android:layout_width="@dimen/chatBottomBtnSize"
                android:layout_height="@dimen/chatBottomBtnSize"
                android:enabled="true"
                android:text="聊"
                android:textSize="10dp"
                android:background="@drawable/common_btn"
                android:layout_alignTop="@+id/deleteBtn"
                android:layout_toRightOf="@+id/deleteBtn"
                android:layout_gravity="right"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/commentBtn"
                android:layout_width="@dimen/chatBottomBtnSize"
                android:layout_height="@dimen/chatBottomBtnSize"
                android:enabled="true"
                android:text="评"
                android:textSize="10dp"
                android:background="@drawable/common_btn"
                android:layout_alignTop="@+id/yueBtn"
                android:layout_toRightOf="@+id/yueBtn"
                android:layout_alignBottom="@+id/yueBtn"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/likeBtn"
                android:layout_width="@dimen/chatBottomBtnSize"
                android:layout_height="@dimen/chatBottomBtnSize"
                android:enabled="true"
                android:text="赞"
                android:textSize="10dp"
                android:background="@drawable/common_btn"
                android:layout_below="@+id/publish_time_text"
                android:layout_toRightOf="@+id/commentBtn"
                android:layout_marginRight="5dp" />

            <Button
                android:id="@+id/yueBtn"
                android:layout_width="@dimen/chatBottomBtnSize"
                android:layout_height="@dimen/chatBottomBtnSize"
                android:enabled="true"
                android:text="约"
                android:textSize="10dp"
                android:background="@drawable/common_btn"
                android:layout_alignTop="@+id/talkBtn"
                android:layout_toRightOf="@+id/talkBtn"
                android:layout_marginRight="5dp" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>

