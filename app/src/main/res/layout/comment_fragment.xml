<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar_view"
            style="@style/My.ImageView.Photo_Avatar"
            android:src="@drawable/default_user_avatar"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:layout_gravity="top" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/commenter_name_text"
                style="@style/My.TextView._Black"
                android:textSize="14sp"
                android:text="你好"
                android:layout_gravity="top"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/comment_time_text"
                style="@style/My.TextView._Black"
                android:textSize="12sp"
                android:text="2015/01/31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_text"
                android:layout_toRightOf="@+id/comment_content_text"
                android:layout_gravity="right"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/comment_content_text"
                style="@style/My.TextView._Black"
                android:textSize="15sp"
                android:text="不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约不约不约叔叔我们不约"
                android:layout_below="@+id/commenter_name_text"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>

