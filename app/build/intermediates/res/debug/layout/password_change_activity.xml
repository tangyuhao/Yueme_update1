<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <LinearLayout style="@style/Register_Input">

        <TextView
            style="@style/My.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/username"
            android:layout_width="@dimen/registerLeftWidth" />
        <TextView
            android:id="@+id/username"
            style="@style/My.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:layout_marginLeft="8dp" />

        <!--<EditText-->
        <!--android:id="@+id/usernameEdit"-->
        <!--style="@style/Register_Edit"-->
        <!--android:hint="@string/login_username_hint" />-->
    </LinearLayout>
    <LinearLayout style="@style/Register_Input">

        <TextView
            style="@style/My.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/password"
            android:layout_width="@dimen/registerLeftWidth" />

        <EditText
            android:id="@+id/oldpasswordEdit"
            style="@style/Register_Edit"
            android:inputType="textPassword"
            android:hint="@string/login_password_hint"
            android:background="@color/tranparent" />
    </LinearLayout>

    <LinearLayout style="@style/Register_Input">

        <TextView
            style="@style/My.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="新密码"
            android:layout_width="@dimen/registerLeftWidth" />

        <EditText
            android:id="@+id/passwordEdit"
            style="@style/Register_Edit"
            android:inputType="textPassword"
            android:hint="@string/login_password_hint"
            android:background="@color/tranparent" />
    </LinearLayout>

    <LinearLayout style="@style/Register_Input">

        <TextView
            style="@style/My.TextView._Black"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/ensurePassword"
            android:layout_width="@dimen/registerLeftWidth" />

        <EditText
            android:id="@+id/ensurePasswordEdit"
            style="@style/Register_Edit"
            android:inputType="textPassword"
            android:hint="@string/ensurePasswordHint"
            android:background="@color/tranparent" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/base_action_bar_height"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/common_btn"
        android:text="确认修改"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>
