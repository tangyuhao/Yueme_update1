<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syc.yueme.ui.activity.RegisterActivity3">
    <com.syc.yueme.ui.view.HeaderLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headerLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:text="@string/userInfo"
        android:layout_height="48dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="190dp"
        android:id="@+id/linearLayout2">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:ems="14"
            android:id="@+id/UserNickname"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_edit_normal"
            android:layout_marginTop="10dp"
            android:layout_weight="13.30" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:weightSum="2"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="个性签名"
        android:id="@+id/UserNicknameTitle"
        android:layout_weight="0.04"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="@dimen/base_action_bar_height"
        android:text="确认"
        android:id="@+id/buttoncharacristic"
        android:background="@drawable/common_btn"
        android:textColor="@color/base_color_text_white"
        android:textSize="@dimen/text_size_large"
        android:layout_weight="0.44"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
