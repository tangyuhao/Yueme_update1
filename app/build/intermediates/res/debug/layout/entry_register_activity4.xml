<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syc.yueme.ui.activity.RegisterActivity4">
    <include layout="@layout/base_header_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="学   号"
        android:id="@+id/textView1"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:singleLine="true"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText1"
        android:background="@drawable/login_edit_normal"
        android:hint="@string/login_student_id_hint"
        android:textColorHint="#ffdddddd"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/note1"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="36dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignRight="@+id/editText1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:weightSum="2"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"
            android:text="上一步"
            android:id="@+id/button1"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClickone"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"
            android:text="验证学邮"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClicktwo"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
