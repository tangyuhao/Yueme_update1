<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syc.yueme.ui.activity.RegisterActivity2">
    <include layout="@layout/base_header_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="用户名"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:hint="@string/login_username_hint"
        android:textColorHint="#ffdddddd"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView1"
        android:background="@drawable/login_edit_normal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="昵  称"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText_nickname"
        android:textColorHint="#ffdddddd"
        android:hint="@string/login_nickname_hint"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/login_edit_normal"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/editText" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="性  别"
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText_nickname"
        android:layout_marginTop="30dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        >

        <RadioButton
            android:id="@+id/btnMan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="男"
            android:checked="true"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/btnWoman"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="女"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:weightSum="2"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"
            android:text="上一步"
            android:id="@+id/button1"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClickone"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"            android:text="下一步"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClicktwo"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
