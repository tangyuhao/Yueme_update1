<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:textSize="10sp"
        android:textColor="@color/guide_color"
        android:height="14dp" />

    <RelativeLayout
        android:background="@drawable/layoutpress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_list_item_height"
        android:layout_below="@id/alpha"
        android:layout_margin="0dp">

        <ImageView
            android:id="@+id/img_friend_avatar"
            style="@style/My.ImageView.Photo_Avatar"
            android:layout_alignParentLeft="true"
            android:src="@drawable/default_user_avatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/My.TextView._Black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_friend_avatar"
            android:text="name"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:textSize="20sp" />
    </RelativeLayout>


