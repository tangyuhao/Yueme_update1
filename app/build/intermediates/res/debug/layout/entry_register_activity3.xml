<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syc.yueme.ui.activity.RegisterActivity3">
    <include layout="@layout/base_header_layout" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="密码"

            android:id="@+id/textView1"
            android:layout_weight="0.04"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:hint="@string/login_password_hint"
            android:ems="10"
            android:id="@+id/editText1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_edit_normal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="确认密码"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="@string/ensurePasswordHint"
            android:id="@+id/editText2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/login_edit_normal"
            android:layout_marginTop="10dp"
            android:layout_weight="0.04"/>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/linearLayout"
        android:weightSum="2"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"
            android:text="上一步"
            android:id="@+id/button1"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClickone"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/base_action_bar_height"            android:text="下一步"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="onClicktwo"
            android:background="@drawable/common_btn"
            android:textColor="@color/base_color_text_white"
            android:textSize="@dimen/text_size_large"
            android:layout_weight="1"/>
    </LinearLayout>



</RelativeLayout>
