<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/avatar"
            style="@style/My.ImageView.Photo_Middle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_user_avatar" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/avatar"
            android:textColor="#0F0F0F"
            android:textSize="16sp" />

        <Button
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/btn_logout_selector"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="约"
            android:textColor="@color/base_color_text_white"
            android:textSize="14sp"
            android:layout_alignTop="@+id/name"
            android:layout_toLeftOf="@+id/disagree"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/disagree"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/common_btn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="不约"
            android:textColor="@color/base_color_text_white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/lemon/AndroidStudioProjects/new-git/app/src/main/res/layout/contact_deal_with_apply_item.xml -->