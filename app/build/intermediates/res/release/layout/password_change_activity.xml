<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syc.yueme.ui.activity.RegisterActivity2">


    <RelativeLayout
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:onClick="onClick">

        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            style="@style/My.Button.logout"
            android:layout_centerInParent="true"
            android:text="确认修改" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/oldPassword"
            android:textSize="20sp"
            android:gravity="bottom"
            android:id="@+id/textView1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
             />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:id="@+id/editText1"
            android:hint="@string/change_password_old"
            android:textColorHint="#ffcfcfcf"
            android:background="@drawable/edittext"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/newPassword"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editText1"
            android:textSize="20sp"
            android:layout_marginRight="30dp"
        />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:id="@+id/editText2"
            android:hint="@string/change_password_new"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/textView2"
            android:background="@drawable/edittext"

            android:textColorHint="#ffcfcfcf"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:textSize="20sp"
            android:gravity="bottom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/confirm_newPassword"
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/editText2"
             />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:id="@+id/editText3"
            android:inputType="textPassword"
            android:layout_below="@+id/textView3"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edittext"
            android:hint="@string/change_password_new_confirm"
            android:textColorHint="#ffcfcfcf"
            />
    </LinearLayout>

</RelativeLayout>


